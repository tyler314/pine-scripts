    label.set_xy(lbl, bar_index, ta.highest(10)[1])
    label.set_text(lbl, txt)

export roundn(float x, int n) => 
    mult = 1 
    if n != 0
        for i = 1 to math.abs(n)
            mult := mult * 10
    
    n >= 0 ? math.round(x * mult) / mult : math.round(x / mult) * mult

